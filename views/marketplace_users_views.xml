<odoo>
    <record id="view_users_form_inherit_marketplace" model="ir.ui.view">
        <field name="name">res.users.form.inherit.marketplace</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='access_rights']" position="inside">
                <group string="Marketplace" invisible="not is_portal_user">
                    <field name="is_marketplace_seller"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>